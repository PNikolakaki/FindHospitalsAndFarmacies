<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appcook.user.findhospitalsandpharmacies.Controllers.MainActivity">

    <LinearLayout
        android:id="@+id/LLlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:padding="5dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:text="Do you want this application does the search with your Location?"/>
    <Button
        android:id="@+id/bgetlocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:textAllCaps="false"
        android:text="Get Location"
        android:padding="5dp"/>
        </LinearLayout>
    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/mycolor"
        android:layout_below="@+id/LLlocation"/>
    <View
        android:id="@+id/v1line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvCurrentLocation"
        android:background="@android:color/black"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:id="@+id/LLtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/v1line"
        android:layout_marginTop="40dp">
    <TextView
        android:id="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:padding="5dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:text="Please select the type of service that you want to search: \n"/>
    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_vertical" />
    </LinearLayout>
    <View
        android:id="@+id/v2line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/LLtype"
        android:background="@android:color/black"
        android:layout_marginTop="40dp"/>
    <LinearLayout
        android:id="@+id/LLradius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/v2line"
        android:layout_marginTop="40dp">
    <TextView
        android:id="@+id/tvRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:padding="5dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:text="Please select the radius: \n"/>
    <Spinner
        android:id="@+id/spinnerRadius"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/bsearch"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@color/mycolor"
        android:text="Search"
        android:textColor="@color/lightgray"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LLradius"/>

    <Button
        android:id="@+id/binfo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/oval_shape"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="i"
        android:textColor="@color/lightgray"
        android:layout_below="@+id/LLradius"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SpinnerActivity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cpv_indeterminate="true"
            app:cpv_thickness="12px"
            android:layout_centerInParent="true"
            app:cpv_color="@color/mycolor"/>
    </RelativeLayout>

</RelativeLayout>
